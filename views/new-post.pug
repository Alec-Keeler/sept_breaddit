extends layout.pug

block content
    h2 Write a new post! 
    form(action="/posts/new" method="post") 
        input(type="hidden" name="_csrf" value=csrfToken)
        label(for="title") Title
        input(type="text" name="title")
        label(for="content") Content
        input(type="text" name="content")
        button Submit